{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Brave Leo Export",
  "type": "object",
  "required": ["exported_at", "source", "message_count", "messages"],
  "properties": {
    "exported_at": {
      "type": "string",
      "format": "date-time"
    },
    "source": {
      "type": "string",
      "enum": ["Brave Leo"]
    },
    "message_count": {
      "type": "integer",
      "minimum": 1
    },
    "messages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["role", "text"],
        "properties": {
          "role": {
            "type": "string",
            "enum": ["user", "leo"]
          },
          "id": {
            "type": ["integer", "null"]
          },
          "text": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
