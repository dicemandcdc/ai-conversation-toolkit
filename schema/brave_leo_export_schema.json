{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Brave Leo Export",
  "type": "object",
  "required": ["exported_at", "source", "message_count", "messages"],
  "properties": {
    "exported_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISOâ€‘8601 timestamp of the export"
    },
    "source": {
      "type": "string",
      "enum": ["Brave Leo"],
      "description": "Origin of the conversation"
    },
    "message_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of messages in the export"
    },
    "messages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["role", "id", "text"],
        "properties": {
          "role": {
            "type": "string",
            "enum": ["user", "leo"],
            "description": "Who sent the message"
          },
          "id": {
            "type": ["integer", "null"],
            "description": "Sequential identifier (null for Leo replies)"
          },
          "text": {
            "type": "string",
            "description": "Message content"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
